# Database
DATABASE_URL="postgresql://username:password@localhost:5432/tech_blog"

# NextAuth.js
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="auto-generated-secret-key"

# Email Configuration
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER="your-gmail@gmail.com"
EMAIL_SERVER_PASSWORD="your-gmail-app-password"
EMAIL_FROM="noreply@techblog.com"
SUPPORT_EMAIL="support@techblog.com"

# Platform Configuration
PLATFORM_NAME="Tech Blog"
PLATFORM_URL="https://yourdomain.com"
BRAND_LOGO_URL="https://yourdomain.com/logo.png"
BRAND_PRIMARY_COLOR="#2563eb"
BRAND_PRIMARY_DARK="#1e40af"

# Public (exposed to client) branding/env used by maintenance page without hydration mismatch
NEXT_PUBLIC_PLATFORM_NAME="Tech Blog"
NEXT_PUBLIC_BRAND_LOGO_URL="https://yourdomain.com/logo.png"
NEXT_PUBLIC_BRAND_PRIMARY_COLOR="#2563eb"
NEXT_PUBLIC_SUPPORT_EMAIL="support@example.com"

# Next Image Domains (comma-separated additional domains for remote images)
NEXT_IMAGE_DOMAINS="picsum.photos,images.unsplash.com"

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Security
JWT_SECRET="auto-generated-jwt-secret"
BCRYPT_ROUNDS=12

# TinyMCE Editor
NEXT_PUBLIC_TINYMCE_API_KEY="your-tinymce-api-key"
